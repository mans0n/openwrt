@@ -243,6 +243,7 @@ dtb-$(CONFIG_MACH_KIRKWOOD) += \
 	kirkwood-ib62x0.dtb \
 	kirkwood-iconnect.dtb \
 	kirkwood-iomega_ix2_200.dtb \
+	kirkwood-iptime_nas1.dtb \
 	kirkwood-is2.dtb \
 	kirkwood-km_kirkwood.dtb \
